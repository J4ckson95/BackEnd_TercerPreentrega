<style>
    body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #ecf0f1;
        }

        header {
            background-color: #2980b9;
            color: #fff;
            text-align: center;
            padding: 10px;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .user-info {
            background-color: #3498db;
            color: black;
            font-size: 1rem;
            font-weight: 700;
            padding: 10px;
            margin-bottom: 20px;
        }

        .product {
            border: 1px solid #3498db;
            padding: 10px;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

        .product img {
            max-width: 100px;
            margin-right: 10px;
        }

        .product h4 {
            margin: 0;
            color: #3498db;
        }

        .product p {
            margin: 0;
            color: #e74c3c;
        }

        footer {
            background-color: #3498db;
            color: #fff;
            text-align: center;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
</style>
<div class="container">
    <div class="user-info">
        <p>Usuario: {{user.first_name}}</p>
        <p>Email: {{user.email}}</p>
    </div>
    <div>
        {{#each payload}}
        <div class="product">
            <img src="{{this.image}}" alt="{{this.title}}">
            <div>
                <h4>{{this.title}}</h4>
                <p>{{this.price}}</p>
            </div>
        </div>
        {{/each}}
        <button>Comprar</button>
    </div>
</div>