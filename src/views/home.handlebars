    border-radius: 4px;
    cursor: pointer;
}

.button:hover {
    background-color: #2980b9;
}

.footer {
    background-color: #2980b9;
    padding: 10px;
    text-align: center;
    margin-top: 20px;
}

a {
    text-decoration: none;
    color: #333;
    margin: 0 10px;
}

a:hover {
    text-decoration: underline;
}

</style>

